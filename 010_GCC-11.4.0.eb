easyblock = 'Bundle'

name = 'GCC'
version = '11.4.0'

homepage = 'http://gcc.gnu.org/'
description = """The GNU Compiler Collection includes front ends for C, C++,
Objective-C, Fortran, Java, and Ada, as well as libraries for these languages."""

toolchain = SYSTEM

dependencies = [
    # Build GCCcore/11.4.0 first, then binutils on top of that
    ('GCCcore', version),
    ('binutils', '2.40', '', ('GCCcore', version)),
]

altroot = 'GCCcore'
altversion = 'GCCcore'

moduleclass = 'compiler'
